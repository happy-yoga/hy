{
  "name": "happyyoga",
  "version": "0.0.1",
  "main": "index.js",
  "author": "Falk Hoppe <falkhoppe81@gmail.com>",
  "license": "UNLICENSED",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node index.js",
    "watch:start": "nodemon --watch index.js --watch lib/**/* --exec 'npm start'",
    "prebuild:styles": "rm -rf tmp/styles dist/styles && ./build/css-vendor-build.sh",
    "build:styles": "sass --embed-source-map --source-map-urls=absolute ./styles:./tmp/styles -I 'node_modules/bootstrap/scss' -I 'node_modules/hamburgers/_sass'",
    "postbuild:styles": "revving -i tmp/styles -o dist/styles --mode auto -p '/styles' -c",
    "watch:styles": "chokidar 'styles/**/*' -c 'npm run build:styles' --initial",
    "build:images": "node build/image-build.js -s ./images -o dist/images",
    "watch:images": "chokidar 'images/**/*' -c 'npm run build:images' --initial",
    "prebuild:js": "rm -rf tmp/scripts dist/scripts && ./build/js-vendor-build.sh",
    "build:js": "rollup scripts/core.js -o tmp/scripts/core.js --format iife",
    "postbuild:js": "revving -i tmp/scripts -o dist/scripts --mode auto -p '/scripts' -c",
    "watch:js": "chokidar 'scripts/**/*' -c 'npm run build:js' --initial",
    "build": "run-p build:*",
    "watch": "run-p watch:*"
  },
  "description": "",
  "devDependencies": {
    "args": "^5.0.1",
    "bootstrap": "^4.3.1",
    "chokidar-cli": "^1.2.2",
    "document-register-element": "^1.13.2",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "hamburgers": "^1.1.3",
    "imagemin": "^6.1.0",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^7.0.0",
    "imagemin-svgo": "^7.0.0",
    "nodemon": "^1.18.11",
    "npm-run-all": "^4.1.5",
    "rellax": "^1.9.1",
    "revving": "^2.3.0",
    "sass": "^1.19.0"
  },
  "dependencies": {
    "@contentful/rich-text-html-renderer": "^13.1.0",
    "@contentful/rich-text-types": "^13.1.0",
    "contentful": "^7.5.0",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "helmet": "^3.16.0",
    "memory-cache": "^0.2.0",
    "morgan": "^1.9.1",
    "ms": "^2.1.1",
    "object-hash": "^1.3.1",
    "pug": "^3.0.1",
    "rollup": "^1.10.1"
  }
}
